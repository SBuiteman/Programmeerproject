<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.project.stijn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.HomeActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NewWorkoutActivity"
            android:screenOrientation="portrait"
            android:label="My Workouts"/>
        <activity
            android:name=".Activities.ResultsActivity"
            android:screenOrientation="portrait"
            android:label="Exercises"/>
        <activity
            android:name=".Activities.ExerciseSettingsActivity"
            android:screenOrientation="portrait"
            android:label="Specifications"/>
        <activity
            android:name=".Activities.WorkoutContentActivity"
            android:screenOrientation="portrait"
            android:label="Training"></activity>
    </application>

</manifest>