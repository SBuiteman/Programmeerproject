<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.mprog.project.stijn.Activities.NewWorkoutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Workout"
        android:textSize="25pt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/newWorkoutTitle"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Searchterm"
        android:textSize="15pt"
        android:layout_centerHorizontal="true"
        android:id="@+id/searchTermBox"
        android:layout_above="@+id/searchButton"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Search!"
        android:textSize="15pt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:id="@+id/searchButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="10pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"
        android:id="@+id/homeButton"
        android:textAlignment="center"/>

</RelativeLayout>
