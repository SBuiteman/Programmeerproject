<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // Contains exercise name

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="vol of leeg"
        android:textSize="8pt"
        />

    // Contains category name

    <TextView
        android:id="@+id/categoryResult"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseName"
        android:hint="cat.."
        android:textSize="10pt" />

    // Contains muscle names

    <TextView
        android:id="@+id/muscleResult"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exerciseName"
        android:layout_toRightOf="@id/categoryResult"
        android:textSize="10pt" />

    // Contains instructions for exercise

    <TextView
        android:id="@+id/instructionsResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryResult"
        android:textSize="6pt" />

</RelativeLayout>