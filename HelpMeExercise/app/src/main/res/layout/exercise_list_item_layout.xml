<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // Contains exercise name indicator

    <TextView
        android:id="@+id/nameIndiactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Exercise: "
        android:textColor="#000000"
        android:textSize="7pt"
        android:textStyle="bold" />
    // Contains exercise name

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nameIndiactor"
        android:textSize="7pt" />

    // Contains category indicator

    <TextView
        android:id="@+id/categoryIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/exerciseName"
        android:text="Category: "
        android:textColor="#000000"
        android:textSize="7pt"
        android:textStyle="bold" />

    // Contains category name

    <TextView
        android:id="@+id/categoryResult"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseName"
        android:layout_toRightOf="@+id/categoryIndicator"
        android:textSize="7pt" />

    // Contains instructions for exercise

    <TextView
        android:id="@+id/instructionsResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryResult"
        android:textSize="7pt" />

</RelativeLayout>